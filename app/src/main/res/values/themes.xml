<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ToDoList" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="fillButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="fillButtonLight" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/rounded_light_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textInputOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="datePickerTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/purple_700</item>
    </style>

    <style name="plainLightTextTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="plainLightTextSubTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="plainLinkText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>